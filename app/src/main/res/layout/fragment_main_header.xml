<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/nav_arrow_back"
        android:visibility="visible" />

    <include
        android:id="@+id/badge_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        layout="@layout/badge_layout"
        android:visibility="gone" />


    <TextView
        android:id="@+id/header_left_tv"
        style="@style/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/header_left"
        android:gravity="center_vertical"
        android:text=""
        android:visibility="visible" />


    <ImageView
        android:id="@+id/header_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/arrow_right_white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/header_right_tv"
        style="@style/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/header_right"
        android:gravity="center_vertical"
        android:text=""
        android:visibility="visible" />

    <TextView
        android:id="@+id/header_title"
        style="@style/whiteBold.Large"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/header_right"
        android:layout_toRightOf="@id/header_left"
        android:gravity="center"
        android:text="Journal" />

    <ImageView
        android:id="@+id/header_title_iv"
        style="@style/whiteBold.Large"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center" />


</RelativeLayout>