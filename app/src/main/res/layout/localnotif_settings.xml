<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <com.anxa.hapilabs.activities.fragments.HeaderFragments
        android:id="@+id/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/text_orange" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_header"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#e9e9e9"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/LOCAL_NOTIF_HEADER"
                android:textColor="#848484"
                android:textSize="20dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/darkGrayNormal.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:width="0dp"
                android:gravity="center_vertical"
                android:text="@string/MEALTYPE_BREAKFAST"
                android:textColor="#8c8c8c"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/breakfasttime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:width="0dp"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="8:00am"
                android:textSize="20dp"></TextView>

            <ToggleButton
                android:id="@+id/breakfastnotif"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:checked="true" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_separator" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/darkGrayNormal.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:width="0dp"
                android:gravity="center_vertical"
                android:text="@string/MEALTYPE_LUNCH"
                android:textColor="#8c8c8c"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/lunchtime"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:width="0dp"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="1:00pm"
                android:textSize="20dp"></TextView>

            <ToggleButton
                android:id="@+id/lunchnotif"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:checked="true" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_separator" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/darkGrayNormal.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:width="0dp"
                android:gravity="center_vertical"
                android:text="@string/MEALTYPE_DINNER"
                android:textColor="#8c8c8c"
                android:textSize="20dp"></TextView>


            <TextView
                android:id="@+id/dinnertime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:width="0dp"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="8:00pm"
                android:textSize="20dp"></TextView>

            <ToggleButton
                android:id="@+id/dinnernotif"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:checked="true" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_separator" />

    </LinearLayout>

</RelativeLayout>