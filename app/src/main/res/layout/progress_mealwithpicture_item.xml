<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/MEALTYPE_BREAKFAST"
            android:id="@+id/mealType"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Jul 11 at 8:45 AM"
            android:id="@+id/mealDate"
            android:layout_alignTop="@+id/mealType"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:textAlignment="gravity"
            android:gravity="right"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/mealPhoto"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/mealPhotoView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="#7F333333"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false">

            <ImageView
                android:id="@+id/mealPhoto1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/mealPhoto2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/mealPhoto3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/mealPhoto4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/mealPhoto5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>