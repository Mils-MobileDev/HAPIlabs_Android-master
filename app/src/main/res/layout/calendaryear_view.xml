<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

      <com.anxa.hapilabs.activities.fragments.HeaderFragments
          android:id="@+id/fragment_header"
          android:layout_width="match_parent"
          android:layout_height="44dp"
          android:background="@color/text_orangedark" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prevYear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:src="@drawable/left_arrow_orange" >
        </ImageView>

        <TextView
            android:id="@+id/currentYear"
            android:layout_width="0dp"
            android:layout_height="60sp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FB7619" >
        </TextView>

        <ImageView
            android:id="@+id/nextYear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:src="@drawable/right_arrow_orange" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <GridView
            android:id="@+id/calendarGridViewMonth"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:horizontalSpacing="-2dp"
            android:numColumns="3"
            android:verticalSpacing="10dp" >
        </GridView>
    </LinearLayout>

</LinearLayout>