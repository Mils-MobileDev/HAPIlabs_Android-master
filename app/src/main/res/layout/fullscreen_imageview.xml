<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c0000000"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/button_close_background"
            android:textColor="#ffffff"
            android:text="@string/CLOSE_BTN" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:animateLayoutChanges="true" >
        <ImageView
            android:id="@+id/full_image_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/full_image_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/full_image_view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/full_image_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/full_image_view5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomDots_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/bottomDots1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/pager_orange"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/bottomDots2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/pager_gray"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/bottomDots3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/pager_gray"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/bottomDots4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/pager_gray"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/bottomDots5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/pager_gray"
            android:background="@android:color/transparent"/>
        </LinearLayout>

</LinearLayout>
