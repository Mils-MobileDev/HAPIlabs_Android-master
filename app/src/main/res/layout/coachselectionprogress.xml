<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:id="@+id/signupcontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/hapicoach_bg"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="10" >

        <TextView
            style="@style/whiteBold.ExtraLarge"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="bottom|center_horizontal" 
            android:text="@string/SEARCHING_COACHES"
            android:visibility="visible" />

        <TextView
            style="@style/whiteNormal.Large"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:padding="25dp"
            android:text="@string/FINDING_EXPERTS"
            android:visibility="visible" />

       
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="63dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:indeterminateDrawable="@drawable/animateprogress_large"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>