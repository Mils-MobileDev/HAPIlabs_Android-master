<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Border -->
    <item>
        <shape>
            <solid android:color="@color/common_gray_separator"></solid>
            <corners android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
    <!-- Body -->
    <item android:left="1dp"
        android:top="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/common_button_white"></solid>
            <corners android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
</layer-list>