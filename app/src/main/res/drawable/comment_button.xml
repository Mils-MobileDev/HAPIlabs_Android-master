<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Border -->
    <item>
        <shape>
            <solid android:color="@color/common_gray_separator"></solid>
            <corners android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
    <!-- Body -->
    <item android:left="2dp"
        android:top="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="@color/common_button_white"></solid>
            <corners android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
</layer-list>