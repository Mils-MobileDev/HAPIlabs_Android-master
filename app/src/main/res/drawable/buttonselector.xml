<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_focused="true" android:state_pressed="false" >
        <shape>
        <gradient
                android:endColor="#d62608"
                android:startColor="#c53e2b"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c53e2b" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
